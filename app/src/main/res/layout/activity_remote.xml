<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:id="@+id/background_image"/>
    <LinearLayout
            android:layout_width="match_parent" android:layout_height="match_parent" android:layout_gravity="bottom" android:background="@color/black_transparent"/>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/app_bar_remote"
            tools:context=".activity.RemoteActivity" android:paddingBottom="16dp">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disconnect"
                android:id="@+id/disconnect" android:layout_gravity="center_horizontal"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="32dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="Designated.Survivor.S01E02[rartv].mkv"
                    android:id="@+id/title" android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="64dp"
                      android:gravity="center_vertical" android:layout_gravity="center_horizontal">
            <TextView android:layout_width="128dp" android:layout_height="wrap_content"
                      android:text="Fullscreen" android:textColor="@android:color/white" android:textSize="16sp"
                      android:id="@+id/textView5" android:layout_margin="8dp"/>
            <ImageButton android:id="@+id/fullscreen" android:layout_width="42dp"
                         android:background="@drawable/control_button_background"
                         android:src="@drawable/fullscreen" android:scaleType="fitCenter"
                         android:layout_height="42dp"
                         android:padding="12dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="64dp"
                      android:gravity="center_vertical|center_horizontal">
            <ImageButton android:id="@+id/sub_delay_down" android:layout_width="42dp"
                         android:background="@drawable/control_button_background"

                         android:src="@drawable/minus" android:scaleType="fitCenter" android:layout_height="42dp"
                         android:paddingLeft="12dp"
                         android:paddingRight="12dp" android:paddingTop="12dp" android:paddingBottom="12dp"
                         android:layout_marginLeft="8dp" android:layout_marginRight="8dp"/>
            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp" android:tint="#4b4b4b"
                    android:id="@+id/imageView2" android:src="@drawable/sub_delay" android:padding="6dp"/>
            <ImageButton android:id="@+id/sub_delay_up" android:layout_width="42dp"
                         android:background="@drawable/control_button_background"
                         android:src="@drawable/plus" android:padding="12dp" android:scaleType="fitCenter"
                         android:layout_height="42dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="64dp"
                      android:gravity="center">
            <ImageButton android:layout_width="42dp" android:background="@drawable/control_button_background"
                         android:src="@drawable/mute" android:scaleType="fitCenter" android:layout_height="42dp"
                         android:paddingLeft="12dp"
                         android:paddingRight="8dp" android:paddingTop="12dp" android:paddingBottom="12dp"
                         android:id="@+id/mute" android:layout_marginLeft="11dp" android:layout_marginRight="11dp"/>
            <ImageButton
                    android:id="@+id/volume_down"
                    android:layout_width="42dp"
                    android:background="@drawable/control_button_background"
                    android:src="@drawable/volume_down"
                    android:scaleType="fitCenter"
                    android:layout_height="42dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                    android:paddingLeft="12dp" android:paddingRight="8dp" android:paddingTop="12dp"
                    android:paddingBottom="12dp" android:visibility="gone"/>
            <SeekBar android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:id="@+id/volume_bar"
                     android:layout_weight="1" android:max="100" android:indeterminate="false"/>
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/imageView3" android:src="@drawable/volume_up"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
            <ImageButton
                    android:id="@+id/volume_up"
                    android:layout_width="42dp"
                    android:background="@drawable/control_button_background"
                    android:src="@drawable/volume_up"
                    android:padding="12dp" android:scaleType="fitCenter"
                    android:layout_height="42dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                    android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="64dp" android:gravity="center">
            <TextView
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:id="@+id/current_text" android:textSize="16sp"
                    android:textColor="@android:color/white" android:gravity="center_horizontal"/>
            <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress_bar" android:layout_weight="1"/>
            <TextView

                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="42:50"
                    android:id="@+id/total_text" android:textSize="16sp"
                    android:textColor="@android:color/white" android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp" android:gravity="center">
            <ImageButton
                    android:id="@+id/previous_file"
                    android:background="@drawable/control_button_background"
                    android:src="@drawable/previous"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:layout_width="42dp"
                    android:layout_height="42dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"/>
            <FrameLayout android:layout_width="wrap_content" android:layout_height="80dp">
                <ImageButton

                        android:layout_width="42dp"
                        android:background="@drawable/control_button_background"
                        android:src="@drawable/rewind"
                        android:scaleType="fitCenter" android:layout_gravity="center"
                        android:id="@+id/jump_back"
                        android:layout_height="42dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                        android:paddingLeft="10dp" android:paddingTop="12dp" android:paddingRight="12dp"
                        android:paddingBottom="12dp"/>
                <TextView

                        android:id="@+id/jump_back_text"
                        android:layout_width="wrap_content" android:text="-10s"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_height="wrap_content" android:textSize="12sp"
                        android:textColor="#858585"/>
            </FrameLayout>
            <ImageButton
                    android:background="@drawable/control_button_background"
                    android:src="@drawable/play"
                    android:id="@+id/play"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="8dp" android:scaleType="fitCenter"
                    android:layout_marginRight="8dp" android:padding="12dp"/>
            <FrameLayout android:layout_width="wrap_content" android:layout_height="80dp">
                <ImageButton
                        android:layout_width="42dp"
                        android:background="@drawable/control_button_background"
                        android:src="@drawable/forward"
                        android:scaleType="fitCenter" android:layout_gravity="center"
                        android:id="@+id/jump_forward"
                        android:layout_height="42dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                        android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingRight="10dp"
                        android:paddingBottom="12dp"/>
                <TextView
                        android:id="@+id/jump_forward_text"
                        android:layout_width="wrap_content" android:textSize="12sp" android:text="+10s"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_height="wrap_content" android:textColor="#858585"/>
            </FrameLayout>
            <ImageButton
                    android:id="@+id/next_file"
                    android:layout_width="42dp"
                    android:background="@drawable/control_button_background"
                    android:src="@drawable/next"
                    android:padding="12dp" android:scaleType="fitCenter"
                    android:layout_height="42dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout> 